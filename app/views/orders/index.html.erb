<h3 class="text-center">Mon panier</h3>
<div class="list-item-order">
  <% @order_items.each_with_index do |order_item, i|%>
    <div class="card-item-order">
        <%= image_tag order_item.product.photo, class: "card-item-order-img" %>
        <div class="item-order-info">
          <h4> <%=order_item.product.name %></h4>
          <h6> Quantité : <%= order_item.quantity %>  <%= order_item.product.units %></h6>
          <h6> Prix unitaire : <%= order_item.product.price %> € / kg</h6>
          <h6> Prix total : <%= order_item.quantity * order_item.product.price %> €</h6>
          <h6> <%= order_item.market.name %></h6>
        </div>
      <%= link_to '', order_item_path(order_item), method: :delete, class: 'item-delete fas fa-trash' %>
    </div>
  <% end %>
  <div class="card-total-order">
    <h6 class="text-center">TOTAL : <%= @sum %> €</h6>
  </div>
  <div class="card-total-order">
    <h6>Choisir son click and collect...</h6>
  </div>
</div>
