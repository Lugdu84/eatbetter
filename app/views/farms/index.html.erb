<div id="map"
     style="width: 100vw; height: 70vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
<div class="cards-farm">
  <% @farms.each do |farm|%>
    <%= link_to farm_path(farm) do %>
    <div class="card-product" id="<%= farm.id %>">
      <%= image_tag farm.photo1, class: "card-product-img" %>
      <div class="card-product-infos">
        <h2> <%= farm.user.first_name %> </h2>
        <h4> <%= farm.name %></h4>
        <p> <%= farm.content %></p>
      </div>
      <div class="favorite-farm">
        <i class="far fa-heart"></i>
      </div>
    </div>
  <% end %>
  <% end %>
</div>
<%=  link_to 'Liste', listFarms_path(query: @querys, fruits: 'on'), class: 'btn btn-primary-2 ml-3' %>

